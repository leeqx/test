		function show_result(data,show) {
			var $result = $api.byId('result');
			$api.fixIos7Bar($result);
			var $header_h = $api.offset($result).h;
			var UIInput = api.require('UIInput');
			UIInput.open({
			     rect: {
			        x: 10,
			        y: $header_h + 150,
			        w: api.winWidth,
			        h: 40
			    },
			    styles: {
			        bgColor: '#fff',
			        size: 14,
			        color: '#000',
			        placeholder: {
			            color: '#ccc'
			        }
			    },
			    autoFocus: false,
			    maxRows: 1,
			    placeholder: '这是一个输入框',
			    keyboardType: 'number',
			    fixedOn: api.frameName,
			    readOnly:true
			}, function(ret, err){
			});
			if(show == true)
			{
				UIInput.show();
				UIInput.value({
		    			msg: "计算结果："+data
				});
			}


		}

